#######################
###  COLOR SCHEME   ###
#######################

include ~/.cache/wal/colors-sway


#######################
###     BAR         ###
#######################

bar {
    # Position & Appearance
    position            top
    height              32
    workspace_min_width 32
    separator_symbol  "|"
    font              Iosevka Nerd Font Medium 14
    
    # Status Command
    status_command    i3status-rs ~/.config/sway/i3st-rs.toml

    # Colors
    colors {
        background          $background
        statusline          $foreground
        separator           $foreground
        
        # Workspace colors
        focused_workspace   $foreground  $foreground  $background
        active_workspace    $background  $background  $foreground
        inactive_workspace  $background  $background  $foreground
        urgent_workspace    $background  $background  $color3
    }
}


#######################
###  WINDOW STYLE   ###
#######################

# Cursor
seat seat0 xcursor_theme Bibata-Modern-Ice

# Borders
default_border            pixel 2
default_floating_border   pixel 2

# Client Colors
client.focused           $color3   $color3   $color3   $color3   $color3
client.focused_inactive  $color1   $color1   $color1   $color1   $color1
client.unfocused         $color1   $color1   $color1   $color1   $color1
client.urgent            $color3   $color3   $color3   $color3   $color3
client.placeholder       $color1   $color1   $color1   $color1   $color1

# Visual Effects
corner_radius    8
gaps       inner 8

# Blur Effects
blur on
blur_xray off
blur_passes 2
blur_radius 5

# Shadow Effects
shadows on
shadows_on_csd on
shadow_blur_radius 16
shadow_color #0000007F

# Dimming Effects
default_dim_inactive 0.2
dim_inactive_colors.unfocused #000000FF
dim_inactive_colors.urgent #900000FF

# Background
output * bg $wallpaper fill


#######################
###  AUTOSTART      ###
#######################

exec          brightnessctl s 20%
exec_always   autotiling-rs
exec_always   pulseaudio
exec_always   emacs --daemon
exec          sleep 1 && swaymsg reload


#######################
###  KEY BINDINGS   ###
#######################

# Variables
set $mod     Mod4
set $left    h
set $down    j
set $up      k
set $right   l

set $term    kitty
set $browser librewolf
set $menu    bemenu-run \
    --fn "Iosevka Nerd Font Medium 13" \
    --fb "$background" \
    --ff "$foreground" \
    --nb "$background" \
    --nf "$foreground" \
    --tb "$background" \
    --hb "$background" \
    --tf "$foreground" \
    --hf "$color3" \
    --af "$foreground" \
    --ab "$background" \
    --line-height 32 \
    --prompt "Ôê≤" \
    --list 3 down \
    --ch 20 \
    --bottom \
    -n

# Application Shortcuts
bindsym {
    $mod+Shift+Return exec $term
    $mod+b            exec $browser
    $mod+Return       exec emacsclient -c
    $mod+Shift+d      kill
    $mod+r            exec $menu
}

# Window Management
bindsym {
    $mod+Shift+space  floating toggle
    $mod+Ctrl+r       reload
    $mod+Shift+Ctrl+q exec swaymsg exit
}

# Focus Navigation
bindsym {
    $mod+$left        focus left
    $mod+$down        focus down
    $mod+$up          focus up
    $mod+$right       focus right
    
    $mod+Left         focus left
    $mod+Down         focus down
    $mod+Up           focus up
    $mod+Right        focus right
    
    $mod+space        focus mode_toggle
    $mod+a            focus parent
}

# Window Movement
bindsym {
    $mod+Shift+$left  move left
    $mod+Shift+$down  move down
    $mod+Shift+$up    move up
    $mod+Shift+$right move right
    
    $mod+Shift+Left   move left
    $mod+Shift+Down   move down
    $mod+Shift+Up     move up
    $mod+Shift+Right  move right
}

# Workspaces
bindsym {
    # Switch workspace
    $mod+1            workspace number 1
    $mod+2            workspace number 2
    $mod+3            workspace number 3
    $mod+4            workspace number 4
    $mod+5            workspace number 5
    $mod+6            workspace number 6
    $mod+7            workspace number 7
    $mod+8            workspace number 8
    $mod+9            workspace number 9
    $mod+0            workspace number 10
    
    # Move to workspace
    $mod+Shift+1      move container to workspace number 1
    $mod+Shift+2      move container to workspace number 2
    $mod+Shift+3      move container to workspace number 3
    $mod+Shift+4      move container to workspace number 4
    $mod+Shift+5      move container to workspace number 5
    $mod+Shift+6      move container to workspace number 6
    $mod+Shift+7      move container to workspace number 7
    $mod+Shift+8      move container to workspace number 8
    $mod+Shift+9      move container to workspace number 9
    $mod+Shift+0      move container to workspace number 10
}

# Layout Operations
bindsym {
    $mod+v            splitt
    $mod+Ctrl+e       layout toggle split
    $mod+f            fullscreen
    $mod+Shift+s      move scratchpad
    $mod+s            scratchpad show
}

# Media Controls
bindsym {
    XF86AudioMute          exec pulsemixer --toggle-mute
    XF86AudioLowerVolume   exec pulsemixer --change-volume -5
    XF86AudioRaiseVolume   exec pulsemixer --change-volume +5
    XF86AudioPlay 	   exec emacsclient -e "(listen-pause (listen-current-player))"
    XF86AudioPause	   exec emacsclient -e "(listen-pause (listen-current-player))"
    XF86AudioNext	   exec emacsclient -e "(listen-next (listen-current-player))"
    XF86MonBrightnessDown  exec brightnessctl s 5%-
    XF86MonBrightnessUp    exec brightnessctl s +5%
}

# Screenshots
bindsym Print exec grimshot copy area


#######################
###    GESTURES     ###
#######################

bindgesture {
    swipe:left   workspace next
    swipe:right  workspace prev
}


#######################
###  INPUT CONFIG   ###
#######################

input "type:keyboard" {
    xkb_layout   us,ru
    xkb_options  grp:alt_shift_toggle,caps:ctrl_modifier
}

input "type:touchpad" {
    tap             enabled
    dwt             enabled
    natural_scroll  enabled
    accel_profile   "adaptive"
    pointer_accel   0.24
}


#######################
###  RESIZE MODE    ###
#######################

mode "resize" {
    bindsym {
        $left   resize shrink width 10px
        $down   resize grow height 10px
        $up     resize shrink height 10px
        $right  resize grow width 10px
        
        Left    resize shrink width 10px
        Down    resize grow height 10px
        Up      resize shrink height 10px
        Right   resize grow width 10px
        
        Return  mode "default"
        Escape  mode "default"
    }
}
bindsym $mod+Shift+r mode "resize"